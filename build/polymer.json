{
  "entrypoint": "index.html",
  "shell": "src/page/landing-page.html",
  "fragments": [
    "src/page/profile-page.html",
    "src/page/experience-page.html",
    "src/page/publication-page.html",
    "src/page/project-page.html",
    "src/element/vertical-resize-title.html"
  ],
  "sources": [
    "src/**/*",
    "images/**/*",
    "bower.json",
    "index.html",
    "src/page/landing-page.html",
    "src/page/profile-page.html",
    "src/page/experience-page.html",
    "src/page/publication-page.html",
    "src/page/project-page.html",
    "src/element/vertical-resize-title.html"
  ],
  "extraDependencies": [
    "manifest.json",
    "bower_components/webcomponentsjs/*",
    "404.html",
    "bower_components/webcomponentsjs/*.js"
  ],
  "builds": [
    {
      "name": "es6",
      "browserCapabilities": [
        "es2015"
      ],
      "js": {
        "minify": true,
        "compile": false
      },
      "css": {
        "minify": true
      },
      "html": {
        "minify": true
      },
      "bundle": true,
      "addServiceWorker": true,
      "addPushManifest": true,
      "preset": "es6-bundled"
    },
    {
      "name": "es5",
      "js": {
        "minify": true,
        "compile": true
      },
      "css": {
        "minify": true
      },
      "html": {
        "minify": true
      },
      "bundle": true,
      "addServiceWorker": true,
      "addPushManifest": true,
      "preset": "es5-bundled"
    }
  ],
  "lint": {
    "rules": [
      "polymer-2"
    ]
  }
}